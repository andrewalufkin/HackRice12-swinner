#:kivy 1.0.9

WindowManager:
    WindowLoading1:
    WindowLoading2:
    WindowLoading3:
    WindowSurvey:
    WindowFirstTime:
    WindowMain:
    WindowFavorites:
    WindowCheckout:
    
<WindowLoading1>:
    name: "loading"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Image: 
            source: "Loading-1.png"
            allow_stretch: True
            keep_ratio: False
        Button:
            size_hint: 1, .1
            text: "Loading . . ."
            on_press: app.root.current = "loading2"

<WindowLoading2>:
    name: "loading2"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Image: 
            source: "Loading-2.png"
            allow_stretch: True
            keep_ratio: False
        Button:
            size_hint: 1, .1
            text: "Loading . . ."
            on_press: app.root.current = "loading3"
            
<WindowLoading3>:
    name: "loading3"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Image: 
            source: "Loading-3.png"
            allow_stretch: True
            keep_ratio: False
        Button:
            size_hint: 1, .1
            text: "Complete Survey"
            on_press: app.root.current = "survey"

<WindowSurvey>:
    name: "survey"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        SwinnerSurvey:
        
        Button:
            size_hint: 1, .1
            text: "Submit"
            on_press: app.root.current = "first_time"
    
<WindowFirstTime>:
    name: "first_time"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Image: 
            source: "first-time.png"
            allow_stretch: True
            keep_ratio: False
        Button:
            size_hint: 1, .1
            text: "Begin Swiping"
            on_press: app.root.current = "main"
    
<WindowMain>:
    name: "main"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        SwinnerMain:
        Button: 
            size_hint: 1, .1
            text: "Go to favorites!"
            on_press: app.root.current = "favorites"
    
<WindowFavorites>:
    name: "favorites"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        SwinnerFavorites:
        Button:
            size_hint: 1, .1
            text: "Proceed to checkout"
            on_press: app.root.current = "checkout"
    
<WindowCheckout>:
    name: "checkout"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        SwinnerCheckout:

# -----
# All the code for SwinnerCheckout
# -----

<SwinnerCheckout>:
    orientation: "vertical"

# -----
# All the code for SwinnerMain
# -----

<SwinnerMain>:
    orientation: "vertical"

<SwinnerSwipe>:
    orientation: "horizontal"
    Button:
        text: "L"
    Button:
        text: "R"

# -----
# All the code for SwinnerFavorites
# -----

<SwinnerFavorites>:
    canvas:
        Color:
            rgba: .5, .5, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"
    Label:
        size_hint: 1, .2
        text: "Favorites"
    Label:
        halign: "center"
        valign: "top"
        size_hint: 1, .3
        text: "Select which of your favorite recipes you want to purchase. You can also delete recipes from your favorite list. \n Click the arrow near the recipe name to see detailed ingredient lists."
    SwinnerOptions:
        size_hint: 1, .5

<SwinnerOptions>:
    cols: 3
    row_default_height: "20dp"
    row_force_default: True


# -----
# All the code for SwinnerSurvey
# -----

<SwinnerBudgetCheckbox>:
    orientation: "lr-tb"
    spacing: "30dp"
    
<SwinnerDietCheckbox>:
    orientation: "lr-tb"
    spacing: "30dp"

<SwinnerCuisineCheckbox>:
    orientation: "lr-tb"
    spacing: "30dp"

<SwinnerTimeCheckbox>
    orientation: "lr-tb"

<SwinnerSurvey>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "vertical"
    Label:
        text: "Getting to know you!"
        font_size: 100
    Label:
        text: "What is your planned budget per meal?"
    SwinnerBudgetCheckbox:
    Label:
        text: "Do you have any dietary restrictions and/or allergies?"
    SwinnerDietCheckbox:
    Label:
        text: "Which cuisines do you like?"
    SwinnerCuisineCheckbox:
    Label:
        text: "How much time are you able to dedicate to cooking?"
    SwinnerTimeCheckbox: